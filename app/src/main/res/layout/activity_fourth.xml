<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".FourthActivity">
    <TextView
        android:id="@+id/catTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filter"
        android:textSize="30sp"
        android:padding="5dp"
        android:background="@drawable/boxtype2"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/apply"
        app:layout_constraintTop_toBottomOf="@id/catTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="gravity"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/boxtype"
                android:autofillHints="Any"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keywords"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/key"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:hint="Type topics"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:background="@drawable/boxtype"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <Spinner
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="gravity"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boxtype"
                android:autofillHints="Any"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter"
        app:layout_constraintBottom_toTopOf="@id/newslist"
        android:textSize="20sp"
        android:background="@drawable/boxtype2"
        android:textColor="@color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newslist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apply"
        app:layout_constraintBottom_toTopOf="@id/go"/>
    <LinearLayout
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/newslist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/page"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="2dp"
            android:layout_marginBottom="30dp"
            android:text=" / 1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>